@model EditUserViewModel

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role"></label>
        <select asp-for="Role" asp-items="Model.Roles" class="form-select"></select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="mb-3" id="managerField" style="display: none;">
        <label asp-for="ManagerId"></label>
        <select asp-for="ManagerId" asp-items="Model.Managers" class="form-select">
            <option value="">-- Select Manager --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

@section Scripts {
    <script>
        function toggleManagerField() {
            const role = document.getElementById("Role").value;
            document.getElementById("managerField").style.display = role === "Member" ? "block" : "none";
        }
        document.getElementById("Role").addEventListener("change", toggleManagerField);
        window.onload = toggleManagerField;
    </script>
}
